<!DOCTYPE html>
<html lang="en">
 <%- include('partials/head') %>
<body>
    <%- include('partials/header') %>
    
    <%if(errors.message) {%>
        <div class="error-message">
            <p class="error"><%=errors.message%></p>
        </div>
    <%}%>
    <section class="product-item">
        <div class="wrapper">
            <h2><%=product.title%></h2>
            <p><%=product.price%></p>
            <p><%=product.description%></p>
            <div>
                <% 
                    const creator = users.find(user => user._id.toString() === item.user.toString());
                %>
                <p>Created By <span class="autor"><%= creator ? creator.username : 'Unknown' %></span></p>
            </div>
        </div>
        <a href="/products">Back To Products Page</a>
    </section>
</body>
</html>